div(style="max-width: 600px; margin: 0 auto;" slot="render-container")
  div#rendered
    table(border="0" cellpadding="0" cellspacing="0" role="presentation" style="border-collapse:collapse;border-spacing:0px;" slot="render")
      tbody
        tr
          td(:style="{ width: imageWidth + 'px' }")
            img(:src="imageUrl" :alt="altText" style="border: 0; display: block; outline: none; text-decoration: none; height: auto; width: 100%; font-size: 13px;" :width="imageWidth" height="auto")
